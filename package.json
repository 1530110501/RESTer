{
  "name": "rester",
  "version": "3.5.1",
  "description": "A REST client for almost any web service.",
  "homepage": "https://github.com/frigus02/RESTer",
  "bugs": "https://github.com/frigus02/RESTer/issues",
  "license": "MIT",
  "author": "Jan KÃ¼hle <jkuehle90@gmail.com> (https://kuehle.me)",
  "repository": "frigus02/RESTer",
  "scripts": {
    "postinstall": "bower install",
    "pretest": "node tools/scripts/pre-test.js",
    "test": "wct",
    "posttest": "node tools/scripts/post-test.js",
    "start": "yarn run clean:build && concurrently --names \"FILES,SITE\" \"yarn run build:files -w\" \"yarn run build:site --config webpack.dev.js\"",
    "build": "yarn run clean:build && yarn run build:files && yarn run build:site --config webpack.prod.js",
    "build:files": "cpx \"src/{{background,images}/**,manifest.json}\" .build/",
    "build:site": "webpack --progress",
    "lint": "yarn run lint:javascript && yarn run lint:polymer && yarn run lint:firefox",
    "lint:javascript": "eslint --ext .js,.html src/",
    "lint:polymer": "polymer lint --root src/site/ --rules polymer-2",
    "lint:firefox": "node tools/scripts/lint-firefox-addon.js .build/",
    "package": "yarn run clean:package && yarn run package:chrome && yarn run package:firefox",
    "package:chrome": "node tools/scripts/package-addon.js chrome .build/ .package/",
    "package:firefox": "node tools/scripts/package-addon.js firefox .build/ .package/",
    "clean:build": "rimraf .build",
    "clean:package": "rimraf .package"
  },
  "devDependencies": {
    "addons-linter": "0.32.0",
    "archiver": "^2.1.1",
    "babel-eslint": "8.1.2",
    "bower": "1.8.2",
    "chalk": "2.3.0",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.3.1",
    "cpx": "^1.5.0",
    "eslint": "^4.16.0",
    "eslint-config-crockford": "2.0.0",
    "eslint-plugin-html": "3.2.2",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "log-symbols": "2.1.0",
    "mkdirp": "^0.5.1",
    "polymer-cli": "^1.5.7",
    "polymer-webpack-loader": "^2.0.1",
    "rimraf": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "web-component-tester": "6.4.1",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1",
    "xml2js": "^0.4.19"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "private": true
}
