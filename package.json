{
  "name": "rester",
  "version": "3.5.1",
  "description": "A REST client for almost any web service.",
  "homepage": "https://github.com/frigus02/RESTer",
  "bugs": "https://github.com/frigus02/RESTer/issues",
  "license": "MIT",
  "author": "Jan KÃ¼hle <jkuehle90@gmail.com> (https://kuehle.me)",
  "repository": "frigus02/RESTer",
  "scripts": {
    "postinstall": "bower install && gulp updatelibrarylinks",
    "pretest": "node tools/scripts/pre-test.js",
    "test": "wct",
    "posttest": "node tools/scripts/post-test.js",
    "start": "yarn run clean && concurrently --names \"FILES,SITE\" \"yarn run build:files -w\" \"yarn run build:site -w\"",
    "build": "yarn run clean && yarn run build:files && yarn run build:site",
    "lint": "yarn run lint:javascript && yarn run lint:polymer && yarn run lint:firefox",
    "lint:javascript": "eslint --ext .js,.html src/",
    "lint:polymer": "polymer lint --root src/site/ --rules polymer-2",
    "lint:firefox": "node tools/scripts/lint-firefox-addon.js .build/",
    "package": "gulp package",
    "clean": "rimraf .build && rimraf .package",
    "build:files": "cpx \"src/{{background,images}/**,manifest.json}\" .build/",
    "build:site": "webpack --progress"
  },
  "devDependencies": {
    "addons-linter": "0.32.0",
    "babel-eslint": "8.1.2",
    "bower": "1.8.2",
    "chalk": "2.3.0",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.3.1",
    "cpx": "^1.5.0",
    "css-slam": "2.0.2",
    "del": "3.0.0",
    "eslint": "^4.16.0",
    "eslint-config-crockford": "2.0.0",
    "eslint-plugin-html": "3.2.2",
    "file-loader": "^1.1.6",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel-minify": "0.2.0",
    "gulp-crisper": "1.1.0",
    "gulp-html-minifier": "0.1.8",
    "gulp-if": "2.0.2",
    "gulp-rename": "1.2.2",
    "gulp-zip": "4.1.0",
    "html-webpack-plugin": "^2.30.1",
    "log-symbols": "2.1.0",
    "parse5": "3.0.3",
    "plugin-error": "^0.1.2",
    "plur": "2.1.2",
    "polymer-build": "2.1.1",
    "polymer-cli": "^1.5.7",
    "polymer-webpack-loader": "^2.0.1",
    "rimraf": "^2.6.2",
    "through2": "2.0.3",
    "vinyl": "^2.1.0",
    "web-component-tester": "6.4.1",
    "webpack": "^3.10.0",
    "xml2js": "^0.4.19"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "private": true
}
