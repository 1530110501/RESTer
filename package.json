{
  "name": "rester",
  "version": "3.7.2",
  "description": "A REST client for almost any web service.",
  "homepage": "https://github.com/frigus02/RESTer",
  "bugs": "https://github.com/frigus02/RESTer/issues",
  "license": "MIT",
  "author": "Jan KÃ¼hle <jkuehle90@gmail.com> (https://kuehle.me)",
  "repository": "frigus02/RESTer",
  "scripts": {
    "postinstall": "bower install",
    "start": "yarn run clean:build && concurrently --names \"FILES,SITE\" \"yarn run build:files -w\" \"yarn run webpack --progress --config webpack.dev.js\"",
    "clean:build": "rimraf .build",
    "clean:package": "rimraf .package",
    "build": "yarn run clean:build && yarn run build:files && yarn run build:site",
    "build:files": "cpx \"src/{images/**,manifest.json}\" .build/",
    "build:site": "webpack --config webpack.prod.js",
    "lint": "yarn run lint:javascript && yarn run lint:firefox",
    "lint:javascript": "eslint --ext .js,.html src/",
    "lint:polymer": "polymer lint --root src/site/ --rules polymer-2",
    "lint:firefox": "node tools/scripts/lint-firefox-addon.js .build/",
    "test": "jest",
    "package": "yarn run clean:package && yarn run package:chrome && yarn run package:firefox",
    "package:chrome": "node tools/scripts/package-addon.js chrome",
    "package:firefox": "node tools/scripts/package-addon.js firefox"
  },
  "devDependencies": {
    "addons-linter": "0.36.1",
    "archiver": "^2.1.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "8.2.1",
    "babel-jest": "^22.2.2",
    "babel-preset-env": "^1.6.1",
    "bower": "1.8.2",
    "chalk": "2.3.0",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.4.1",
    "cpx": "^1.5.0",
    "eslint": "^4.17.0",
    "eslint-config-crockford": "2.0.0",
    "eslint-plugin-html": "4.0.2",
    "file-loader": "^1.1.6",
    "geckodriver": "^1.10.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.2.2",
    "log-symbols": "2.2.0",
    "mkdirp": "^0.5.1",
    "polymer-cli": "^1.6.0",
    "polymer-webpack-loader": "^2.0.1",
    "rimraf": "^2.6.2",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "webpack": "^3.11.0",
    "webpack-merge": "^4.1.1",
    "xml2js": "^0.4.19"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "private": true
}
